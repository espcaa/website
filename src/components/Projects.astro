---
import "../styles/projects.css";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");

const slides = await Promise.all(
    projects.map(async (project) => {
        const imageImport = await import(
            `../assets/projects/${project.data.image}.png`
        );
        return {
            project,
            image: imageImport.default,
        };
    }),
);

// get the component prop colorId

const { colorId } = Astro.props;
---

<div class="projects-row">
    {
        slides.map(({ project, image }) => (
            <div class="project-card">
                <a
                    href={`/projects/${project.slug}?color=${colorId}`}
                    class="project-link"
                >
                    <div class="project-image">
                        <Image src={image} alt={project.data.title} />
                    </div>
                    <div class="project-content">
                        <h3>{project.data.title}</h3>
                        <p>{project.data.description}</p>
                    </div>
                </a>
            </div>
        ))
    }
</div>
